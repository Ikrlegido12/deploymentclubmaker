---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="es-ES">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/clubmaker.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style>
    :root {
		--accent: #00adcc;
		--accent-light: #b2daff;
		--accent-dark: #002fff;
		background-color: #14151a;
		--accent-gradient: linear-gradient(45deg, var(--accent-dark), var(--accent-light) 30%, white 60%);
	}

	html {
		font-family: system-ui, sans-serif;
	
	}
</style>